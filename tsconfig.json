{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "esnext",
      "es2019",
      "es2020",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
